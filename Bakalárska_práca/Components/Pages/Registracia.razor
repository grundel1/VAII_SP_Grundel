@page "/registracia"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Registrácia</title>
</head>
<body>
    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
        <header>
            <h1 class="page-title">Registrácia</h1>
        </header>
        <div>
            <a href=""><i class="pacient" aria-hidden="true"></i> Pacient</a>
            <br/>
                <a href=""><i class="zubar"></i> Zubár </a>

            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="home">
                    <br>
                    <form action="/registracia">
                        <div class="form-group">
                            <label for="frm-registrationForm-name" id="frm-registrationForm-name">Meno a priezvisko pacienta</label>
                            <input type="text" name="name" class="form-control" placeholder="Meno a priezvisko pacienta" id="frm-registrationForm-name">
                        </div>

                        <div class="form-group">
                            <label for="frm-registrationForm-email">Email</label>
                            <input type="email" name="email" placeholder="Email" class="form-control validate-email">
                        </div>

                        <div class="form-group">
                            <label for="frm-registrationForm-phone">Telefón</label>
                            <input type="text" name="phone" class="form-control validate-phone" placeholder="Telefón">
                        </div>

                        <div class="form-group">
                            <label for="insurance">Poisťovňa</label>
                            <select name="insurance_id" class="form-control"><option value="">Vyberte</option><option value="3">Všeobecná zdravotná poisťovňa, a.s.</option><option value="2">Union zdravotná poisťovňa, a.s.</option><option value="1">DÔVERA zdravotná poisťovňa, a.s.</option><option value="4">Bez poisťovne</option></select>
                        </div>


                        <div class="form-group">
                            <label for="frm-registrationForm-conditions" class="no-wrap d-inline-block">
                                <input type="checkbox" name="conditions"> 
                                Oboznámil som sa s <a target="_blank" class="link" href="">so všeobecnými pravidlami.</a>
                            </label>

                        </div>

                        <div class="form-group">
                            <input type="submit" name="_submit" id="_submit" class="btn" value="Registrovať">
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
